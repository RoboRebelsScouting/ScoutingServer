<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_margin">

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/input_event_code">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/eventCodeInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20" />
    </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:id="@+id/matchTypeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/radioQuals">
        <RadioButton
            android:id="@+id/radioQuals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/match_quals" />
        <RadioButton
            android:id="@+id/radioPlayoffs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/match_playoff" />
    </RadioGroup>

</LinearLayout>